<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl">

    <include
        layout="@layout/toolbar"
        android:id="@+id/toolbar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:theme="@style/CustomFont"
                android:text="إسمك الكريم (مطلوب)"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/txt_field"
                app:theme="@style/CustomFont"
                android:background="@drawable/txt_field"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:theme="@style/CustomFont"
                android:text="الطلب"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/txt_field"
                app:theme="@style/CustomFont"
                android:background="@drawable/txt_field"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:theme="@style/CustomFont"
                android:text="الدولة"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/txt_field"
                app:theme="@style/CustomFont"
                android:background="@drawable/txt_field"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:theme="@style/CustomFont"
                android:text="المدينة"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/txt_field"
                app:theme="@style/CustomFont"
                android:background="@drawable/txt_field"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:theme="@style/CustomFont"
                android:text="الحى"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/txt_field"
                app:theme="@style/CustomFont"
                android:background="@drawable/txt_field"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:theme="@style/CustomFont"
                android:text="العقار"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/txt_field"
                app:theme="@style/CustomFont"
                android:background="@drawable/txt_field"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:theme="@style/CustomFont"
                android:text="بريدك الإلكترونى (مطلوب)"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/txt_field"
                app:theme="@style/CustomFont"
                android:background="@drawable/txt_field"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:theme="@style/CustomFont"
                android:text="@string/mobile"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/txt_field"
                app:theme="@style/CustomFont"
                android:background="@drawable/txt_field"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:theme="@style/CustomFont"
                android:text="طلبك بالتفصيل"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/txt_field"
                app:theme="@style/CustomFont"
                android:background="@drawable/txt_field"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:theme="@style/CustomFont"
                android:text="أوقات التواصل"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">


                <EditText
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="@dimen/txt_field"
                    app:theme="@style/CustomFont"
                    android:background="@drawable/txt_field"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:theme="@style/CustomFont"
                    android:text="من   "/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">


                <EditText
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="@dimen/txt_field"
                    app:theme="@style/CustomFont"
                    android:background="@drawable/txt_field"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:theme="@style/CustomFont"
                    android:text="إلى   "/>


            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/btn_bg"
                    android:layout_alignParentLeft="true"
                    android:textColor="@color/white"
                    app:theme="@style/CustomFont"
                    android:text="رفض الطلب"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/btn_bg"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/white"
                    app:theme="@style/CustomFont"
                    android:text="  الموافقة على الطلب  "/>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>