<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl">

    <include
        layout="@layout/toolbar"
        android:id="@+id/toolbar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:cardCornerRadius="5dp"
                android:layout_marginTop="20dp"
                app:cardBackgroundColor="@color/colorPrimary">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:theme="@style/CustomFont"
                    android:textColor="@color/white"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:text="بيانات رئيسية"/>
            </android.support.v7.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:theme="@style/CustomFont"
                android:text="رقم التقرير"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/txt_field"
                app:theme="@style/CustomFont"
                android:background="@drawable/txt_field"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:theme="@style/CustomFont"
                android:text="العميل"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/txt_field"
                app:theme="@style/CustomFont"
                android:background="@drawable/txt_field"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:theme="@style/CustomFont"
                android:text="حالة التقرير"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/txt_field"
                app:theme="@style/CustomFont"
                android:background="@drawable/txt_field"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:theme="@style/CustomFont"
                android:text="تاريخ التكليف"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/txt_field"
                app:theme="@style/CustomFont"
                android:background="@drawable/txt_field"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:theme="@style/CustomFont"
                android:text="رقم الطلب"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/txt_field"
                app:theme="@style/CustomFont"
                android:background="@drawable/txt_field"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:theme="@style/CustomFont"
                android:text="تاريخ عمل التقرير"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/txt_field"
                app:theme="@style/CustomFont"
                android:background="@drawable/txt_field"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:theme="@style/CustomFont"
                android:text="قيم عقارك"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">


                <EditText
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="@dimen/txt_field"
                    app:theme="@style/CustomFont"
                    android:background="@drawable/txt_field"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:theme="@style/CustomFont"
                    android:text="نوع العقار      "/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">


                <EditText
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="@dimen/txt_field"
                    app:theme="@style/CustomFont"
                    android:background="@drawable/txt_field"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:theme="@style/CustomFont"
                    android:text="المدينة          "/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">


                <EditText
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="@dimen/txt_field"
                    app:theme="@style/CustomFont"
                    android:background="@drawable/txt_field"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:theme="@style/CustomFont"
                    android:text="الحى              "/>


            </LinearLayout>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/btn_bg"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_gravity="center"
                android:textColor="@color/white"
                app:theme="@style/CustomFont"
                android:text="إرسال"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>